{# @var \Codeschubser\Bundle\TwigComponents\Twig\Component\Button this #}

<button {{ attributes.defaults({class: this.defaultCssClass(), type: this.isSubmit ? 'submit' : 'button'}) }}>
    {%- if this.icon -%}
        <span class="{%- if this.label %}me-1 {% endif -%} {{ this.icon }}"></span>
    {%- endif -%}

    <twig:block name="content">{{- this.label -}}</twig:block>
</button>
